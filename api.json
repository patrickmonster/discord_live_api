{
  "openapi": "3.0.0",
  "info": {
    "title": "promise_back",
    "description": "약속앱 api",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3100",
      "description": "api test"
    }
  ],
  "paths": {
    "/auth/discord/": {
      "get": {
        "tags": [
          "auth"
        ],
        "summary": "Passport for discord",
        "description": "Discord 인증 Auth 입니다.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "디스코드 로그인 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/access-token"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/access-token"
                }
              }
            }
          }
        }
      }
    },
    "/auth/discord/invite": {
      "get": {
        "tags": [
          "auth"
        ],
        "summary": "Passport for discord",
        "description": "Discord 인증 Auth 입니다.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "디스코드 로그인 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/access-token"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/access-token"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/user/": {
      "get": {
        "tags": [
          "auth"
        ],
        "summary": "User profile",
        "description": "현재 로그인된 사용자의 정보를 확인합니다.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "사용자 정보 조회",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/access-user"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/access-user"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "status404": {
        "type": "object",
        "properties": {
          "status": {
            "type": "number",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "access-token": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "string",
            "description": "user id"
          },
          "token": {
            "type": "string",
            "format": "string",
            "description": "user access token"
          }
        }
      },
      "access-user": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "string",
            "description": "user id"
          },
          "provider": {
            "type": "string",
            "format": "string",
            "description": "user OAuth provider type"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "in": "header",
        "bearerFormat": "JWT"
      }
    }
  }
}