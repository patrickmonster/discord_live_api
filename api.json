{
  "openapi": "3.0.0",
  "info": {
    "title": "discrd_live_api",
    "description": "방송알리미 api",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3100",
      "description": "api test"
    }
  ],
  "paths": {
    "/api/v1/token/": {
      "get": {
        "tags": [
          "auth"
        ],
        "summary": "User token",
        "description": "현재 로그인된 사용자의 정보를 확인합니다.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "사용자 정보 조회",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/access-user"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/access-user"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/api/v1/event/user/{idx}": {
      "get": {
        "tags": [
          "Eventsub"
        ],
        "summary": "User event list",
        "description": "로그인된 사용자의 구독중인 이벤트 리스트를 불러옵니다.",
        "parameters": [
          {
            "name": "idx",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "authorization",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "사용자 정보 조회",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/access-user"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/access-user"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/interaction/": {
      "get": {
        "tags": [
          "interaction"
        ],
        "summary": "Discord app",
        "description": "앱 동작 코드 입니다.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Pong"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "status404": {
        "type": "object",
        "properties": {
          "status": {
            "type": "number",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "access-token": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "string",
            "description": "user id"
          },
          "token": {
            "type": "string",
            "format": "string",
            "description": "user access token"
          }
        }
      },
      "access-user": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "string",
            "description": "user id"
          },
          "provider": {
            "type": "string",
            "format": "string",
            "description": "user OAuth provider type"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "in": "header",
        "bearerFormat": "JWT"
      }
    }
  }
}